<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">

        <layer-list>

            <item android:gravity="top">
                <shape>
                    <solid android:color="#00000000" />
                    <size android:height="16dp" />
                </shape>
            </item>

            <item android:gravity="bottom" android:top="16dp">
                <shape>
                    <solid android:color="#ff000000" />

                    <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="32dp" />

                </shape>

            </item>

        </layer-list>


    </item>

    <item android:state_checked="true">

        <layer-list>

            <item android:gravity="top">
                <shape>
                    <solid android:color="#ff3f4ff5" />
                    <size android:height="16dp" />
                </shape>
            </item>

            <item android:gravity="bottom" android:top="16dp">
                <shape>
                    <solid android:color="#ff3f4ff5" />

                    <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="32dp" />

                </shape>

            </item>

        </layer-list>

    </item>


    <item android:state_checked="false">


        <layer-list>

            <item android:gravity="top">
                <shape>
                    <solid android:color="#00000000" />
                    <size android:height="16dp" />
                </shape>
            </item>

            <item android:gravity="bottom" android:top="16dp">
                <shape>
                    <solid android:color="#ff3" />

                    <padding android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="32dp" />

                </shape>

            </item>

        </layer-list>

    </item>

</selector>

